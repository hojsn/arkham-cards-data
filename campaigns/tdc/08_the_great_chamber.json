    {
      "id": "check_resolution_west",
      "text": "Check the campaign log. If <i>the expedition headed west</i>:",
      "type": "branch",
      "condition": {
        "type": "campaign_log",
        "section": "campaign_notes",
        "id": "expedition_headed_west",
        "options": [
          {
            "boolCondition": true,
            "steps": ["next_court_of_the_ancients"]

          },
          {
            "boolCondition": false,
            "steps": ["check_resolution_east"]
          }
        ]
      }
    },
    {
      "id": "check_resolution_east",
      "bullet_type": "small",
      "type": "branch",
      "condition": {
        "type": "campaign_log",
        "section": "campaign_notes",
        "id": "expedition_headed_east",
        "options": [
          {
            "boolCondition": true,
            "steps": ["next_apiary"]
          }
        ]
      }
    },
    {
      "id": "earn_xp",
      "text": "Each investigator earns experience equal to the Victory X value of each card in the victory display.",
      "type": "input",
      "input": {
        "type": "counter",
        "text": "Victory display:",
        "effects": [
          {
            "type": "earn_xp",
            "investigator": "all"
          }
        ]
      }
    }
